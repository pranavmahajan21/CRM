<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarSize">48dip</item>
        <item name="android:actionBarSize">48dip</item>
    </style>

    <!-- Dimensions -->
    <style name="dimensions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dimensions2">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dimensions3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Dimensions -->

    <style name="style_TV" parent="dimensions">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="style_ET" parent="dimensions">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">3</item>
    </style>

    <!-- used in add/edit screens -->
    <style name="style_TV2" parent="dimensions">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="style_ET2" parent="dimensions">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/custom_bg_solid_white_radius</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- used in add/edit screens -->


    <!-- used in details screens -->
    <style name="LL" parent="dimensions">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:weightSum">5</item>
    </style>

    <style name="TV_left" parent="dimensions2">
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TV_right" parent="dimensions2">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TV_top" parent="dimensions3">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TV_bottom" parent="dimensions3">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- ****used in details screens**** -->


    <!-- used in related entities -->
    <style name="LL3" parent="dimensions3">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="IV2">
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="TV3" parent="dimensions3">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- ****used in related entities**** -->


    <!-- ****used in context menu textfield**** -->
    <style name="RL" parent="dimensions">
        <item name="android:background">@drawable/custom_bg_solid_white_radius</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onOpenContextMenu</item>
    </style>

    <style name="TV" parent="dimensions">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IV" parent="dimensions3">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/arrow_right</item>
    </style>
    <!-- ****used in context menu**** -->


    <!-- used in rows ao account -->
    <style name="TV_link" parent="dimensions2">
        <item name="android:layout_weight">2</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="TV_left2" parent="dimensions2">
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="LL2" parent="dimensions">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:weightSum">5</item>
    </style>
    <!-- ****used in rows of account**** -->


    <!-- used in menu2 screen -->
    <style name="RL2" parent="dimensions2">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="IV3" parent="dimensions3">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/bt_background</item>
    </style>

    <style name="LL4" parent="dimensions3">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="IV4">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TV4" parent="dimensions3">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="B" parent="dimensions2">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/custom_bg_stroke_radius</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- ****used in menu2 screen**** -->


    <!-- ****used in view_solution screen**** -->
    <style name="LL5" parent="dimensions">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:weightSum">7</item>
    </style>
    
    <style name="TV5" parent="dimensions2">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_weight">2.2</item>
    </style>
    
    <style name="ET" parent="dimensions2">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/custom_bg_solid_white_radius</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">Money</item>
        <item name="android:text">0.00</item>
        <item name="android:layout_weight">4.8</item>
    </style>
    <!-- ****used in view_solution screen**** -->
    
    <!-- ***** used in header ***** -->
    <style name="TV6" parent="dimensions3">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_alignBottom">@+id/header_logo_IV</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/custom_bg_stroke_radius</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <!-- ***** used in header ***** -->

</resources>