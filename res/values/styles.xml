<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarSize">48dip</item>
        <item name="android:actionBarSize">48dip</item>
    </style>

    <style name="dimensions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dimensions2">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="dimensions3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_TV" parent="dimensions">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="style_ET" parent="dimensions">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">3</item>
    </style>

    <!-- used in add contact -->
    <style name="style_TV2" parent="dimensions">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- used in add contact -->
    <style name="style_ET2" parent="dimensions">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/custom_bg_solid_radius</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- used in details screens -->
    <style name="LL" parent="dimensions">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:weightSum">5</item>
    </style>

    <style name="TV_left" parent="dimensions2">
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TV_right" parent="dimensions2">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- used in details screens -->


    <!-- used in context menu -->
    <style name="RL" parent="dimensions">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/custom_bg_solid_radius</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onOpenContextMenu</item>
    </style>

    <style name="TV" parent="dimensions">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="IV" parent="dimensions3">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/arrow_down</item>
    </style>
    <!-- used in context menu -->

</resources>