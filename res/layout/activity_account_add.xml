<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@drawable/background_android" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/clientName_TV"
                style="@style/style_TV2"
                android:layout_marginTop="1dp"
                android:text="Client Name:" />

            <EditText
                android:id="@+id/clientName_ET"
                style="@style/style_ET2" />

            <TextView
                android:id="@+id/corridor_TV"
                style="@style/style_TV2"
                android:text="Corridor:" />

            <RelativeLayout
                android:id="@+id/corridor_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_bg_solid_radius"
                android:clickable="true"
                android:onClick="onOpenContextMenu" >

                <TextView
                    android:id="@+id/corridor_TV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Corridor"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>

            <TextView
                android:id="@+id/headquarter_TV"
                style="@style/style_TV2"
                android:text="Headquarter Country:" />

            <RelativeLayout
                android:id="@+id/headquarter_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_bg_solid_radius"
                android:clickable="true"
                android:onClick="onOpenContextMenu" >

                <TextView
                    android:id="@+id/headquarter_TV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Headquarter Country"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>

            <TextView
                android:id="@+id/sub_TV"
                style="@style/style_TV2"
                android:text="Sub LOB:" />

            <RelativeLayout
                android:id="@+id/sub_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_bg_solid_radius"
                android:clickable="true"
                android:onClick="onOpenContextMenu" >

                <TextView
                    android:id="@+id/sub_TV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Sub LOB"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>

            <TextView
                android:id="@+id/leadPartner_TV"
                style="@style/style_TV2"
                android:text="Lead Partner 1:" />

            <RelativeLayout
                android:id="@+id/leadPartner_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_bg_solid_radius"
                android:clickable="true"
                android:onClick="onOpenContextMenu" >

                <TextView
                    android:id="@+id/leadPartner_TV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Lead Partner"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>

            <TextView
                android:id="@+id/accountCategory_TV"
                style="@style/style_TV2"
                android:text="Account Category 1:" />

            <RelativeLayout
                android:id="@+id/accountCategory_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_bg_solid_radius"
                android:clickable="true"
                android:onClick="onOpenContextMenu" >

                <TextView
                    android:id="@+id/accountCategory_TV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Account Category"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>