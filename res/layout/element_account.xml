<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp" >

    <TextView
        android:id="@+id/nameClient_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Client Name"
        android:textColor="@color/blue_dark" />

    <TextView
        android:id="@+id/leadPartner_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="(NA) Lead Partner"
        android:textColor="@color/blue_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/sector_TV"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(NA) Sector"
            android:textColor="@color/blue_dark" />

        <TextView
            android:id="@+id/opportunityLink_TV"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onOpportunity"
            android:text="@string/opportunity_link"
            android:textColor="@color/blue_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/country_TV"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(NA) Country"
            android:textColor="@color/blue_dark" />

        <TextView
            android:id="@+id/contactLink_TV"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onContact"
            android:text="@string/contact_link"
            android:textColor="@color/blue_dark" />
    </LinearLayout>

</LinearLayout>