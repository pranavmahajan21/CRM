<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_android" >

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/clientNameLabel_TV"
                style="@style/style_TV2"
                android:layout_marginTop="1dp"
                android:text="Client Name" />

            <RelativeLayout
                android:id="@+id/client_RL"
                style="@style/RL" >

                <TextView
                    android:id="@+id/clientName_TV"
                    style="@style/TV"
                    android:text="Search for client" />

                <ImageView
                    style="@style/IV"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <TextView
                android:id="@+id/descriptionLabel_TV"
                style="@style/style_TV2"
                android:text="Description" />

            <EditText
                android:id="@+id/description_ET"
                style="@style/style_ET2" />

            <TextView
                android:id="@+id/statusLabel_TV"
                style="@style/style_TV2"
                android:text="Status" />

            <RelativeLayout
                android:id="@+id/status_RL"
                style="@style/RL"
                android:onClick="onShowPicker" >

                <TextView
                    android:id="@+id/status_TV2"
                    style="@style/TV"
                    android:text="Status" />

                <ImageView style="@style/IV" />
            </RelativeLayout>

            <NumberPicker
                android:id="@+id/status_NP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/requiredSolutions_TV"
                style="@style/style_TV2"
                android:text="No. of required solutions:" />

            <EditText
                android:id="@+id/requiredSolutions_ET"
                style="@style/style_ET2" />

            <TextView
                android:id="@+id/currency_TV"
                style="@style/style_TV2"
                android:text="Currency" />

            <EditText
                android:id="@+id/currency_ET"
                style="@style/style_ET2" />
            
            <TextView
                android:id="@+id/probabilityLabel_TV"
                style="@style/style_TV2"
                android:text="Probability" />

            <RelativeLayout
                android:id="@+id/probability_RL"
                style="@style/RL" >

                <TextView
                    android:id="@+id/probability_TV"
                    style="@style/TV"
                    android:text="Probability" />

                <ImageView
                    style="@style/IV"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>
            
            <TextView
                android:id="@+id/salesStageLabel_TV"
                style="@style/style_TV2"
                android:text="Client Name" />

            <RelativeLayout
                android:id="@+id/salesStage_RL"
                style="@style/RL" >

                <TextView
                    android:id="@+id/salesStage_TV"
                    style="@style/TV"
                    android:text="Sales Stage" />

                <ImageView
                    style="@style/IV"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>