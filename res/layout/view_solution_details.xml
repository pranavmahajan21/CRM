<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/solutionManagerLabel_TV"
        style="@style/TV_top"
        android:text="Solution Manager:" />

    <TextView
        android:id="@+id/solutionManager_TV"
        style="@style/TV_bottom"
        android:text="-" />

    <TextView
        android:id="@+id/solutionPartnerLabel_TV"
        style="@style/TV_top"
        android:text="Solution Partner:" />

    <TextView
        android:id="@+id/solutionPartner_TV"
        style="@style/TV_bottom"
        android:text="-" />

    <TextView
        android:id="@+id/solutionNameLabel_TV"
        style="@style/TV_top"
        android:text="Solution Name:" />

    <TextView
        android:id="@+id/solutionName_TV"
        style="@style/TV_bottom"
        android:text="-" />

    <TextView
        android:id="@+id/profitCenterLabel_TV"
        style="@style/TV_top"
        android:text="Profit Center:" />

    <TextView
        android:id="@+id/profitCenter_TV"
        style="@style/TV_bottom"
        android:text="-" />

    <TextView
        android:id="@+id/taxonomyLabel_TV"
        style="@style/TV_top"
        android:text="Taxonomy:" />

    <TextView
        android:id="@+id/taxonomy_TV"
        style="@style/TV_bottom"
        android:text="-" />

    <LinearLayout style="@style/LL" >

        <TextView
            android:id="@+id/feeLabel_TV"
            style="@style/TV_left"
            android:text="Proposal Value:" />

        <TextView
            android:id="@+id/fee_TV"
            style="@style/TV_right"
            android:text="-" />
    </LinearLayout>

    <LinearLayout style="@style/LL" >

        <TextView
            android:id="@+id/pyNfrLabel_TV"
            style="@style/TV_left"
            android:text="PY NFR:" />

        <TextView
            android:id="@+id/pyNfr_TV"
            style="@style/TV_right"
            android:text="-" />
    </LinearLayout>

    <LinearLayout style="@style/LL" >

        <TextView
            android:id="@+id/cyNfrLabel_TV"
            style="@style/TV_left"
            android:text="CY NFR:" />

        <TextView
            android:id="@+id/cyNfr_TV"
            style="@style/TV_right"
            android:text="-" />
    </LinearLayout>

    <LinearLayout style="@style/LL" >

        <TextView
            android:id="@+id/cyNfrPlus1Label_TV"
            style="@style/TV_left"
            android:text="CY+1 NFR:" />

        <TextView
            android:id="@+id/cyNfrPlus1_TV"
            style="@style/TV_right"
            android:text="-" />
    </LinearLayout>

    <LinearLayout style="@style/LL" >

        <TextView
            android:id="@+id/cyNfrPlus2Label_TV"
            style="@style/TV_left"
            android:text="CY+2 NFR:" />

        <TextView
            android:id="@+id/cyNfrPlus2_TV"
            style="@style/TV_right"
            android:text="-" />
    </LinearLayout>

</LinearLayout>