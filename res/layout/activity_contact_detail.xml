<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_android"
    android:orientation="vertical"
    tools:context="com.mw.crm.activity.ContactDetailsActivity" >

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textColor="@color/blue_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/designation_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="-"
                android:textColor="@color/blue_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/organization_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Organization"
                android:textColor="@color/blue_dark"
                android:textSize="18sp" />

            <LinearLayout style="@style/LL" >

                <TextView
                    android:id="@+id/emailLabel_TV"
                    style="@style/TV_left"
                    android:text="Email:" />

                <TextView
                    android:id="@+id/email_TV"
                    style="@style/TV_right"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout style="@style/LL" >

                <TextView
                    android:id="@+id/officePhoneLabel_TV"
                    style="@style/TV_left"
                    android:text="Office Phone:" />

                <TextView
                    android:id="@+id/officePhone_TV"
                    style="@style/TV_right"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout style="@style/LL" >

                <TextView
                    android:id="@+id/mobileLabel_TV"
                    style="@style/TV_left"
                    android:text="Mobile:" />

                <TextView
                    android:id="@+id/mobile_TV"
                    style="@style/TV_right"
                    android:text="-" />
            </LinearLayout>

            <TextView
                android:id="@+id/internalConnectLabel_TV"
                style="@style/TV_top"
                android:text="Internal Connect:" />

            <TextView
                android:id="@+id/internalConnect_TV"
                style="@style/TV_bottom"
                android:text="-" />

            <LinearLayout style="@style/LL" >

                <TextView
                    android:id="@+id/dorLabel_TV"
                    style="@style/TV_left"
                    android:text="Degree of Relationship:" />

                <TextView
                    android:id="@+id/dor_TV"
                    style="@style/TV_right"
                    android:text="-" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>